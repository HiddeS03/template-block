{
  "name": "template-block",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "watch": "vite --config .config/vite.config.ts",
    "build": "tsc -b .config/tsconfig.json && vite build --config .config/vite.config.ts && vite build --config .config/vite.config.no-scope.ts",
    "lint": "eslint . --config .config/eslint.config.js",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:report": "start coverage/index.html"
  },
  "dependencies": {
    "@module-federation/vite": "^1.2.7",
    "file-system": "^2.2.2",
    "path": "^0.12.7",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "uuid": "^11.1.0",
    "vitest": "^3.1.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.22.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^14.3.1",
    "@testing-library/user-event": "^14.4.3",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/coverage-v8": "^3.1.3",
    "eslint": "^9.22.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "jsdom": "^26.1.0",
    "typescript": "~5.7.2",
    "typescript-eslint": "^8.26.1",
    "vite": "^6.3.1"
  }
}
